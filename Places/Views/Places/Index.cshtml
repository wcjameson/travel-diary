<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8">
  <title>Travel Diary/LOCATION-LIST</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css"
    integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
</head>

<body>
  <div class="container">
    @using Travel.Models;

    <h1>List of Locations Travelled</h1>

    @if (Model.Count == 0)
    {
      <p>There are no items in the list.</p>
    }
    <ul>
      @foreach (Places place in Model)
      {
        <li><a href='/places/@place.Id'>@place.CityName</a></li>
      }

    </ul>
    <a href="/places/new">Add a new trip?</a>
    <br>
    <form action="/places/delete" method="post">
      <button type="submit" name="button" class="btn btn-success">Clear All Locations?</button>
    </form>
  </div>
</body>

</html>